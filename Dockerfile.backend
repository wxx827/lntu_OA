# Backend Dockerfile
FROM maven:3.8-openjdk-8 AS builder
WORKDIR /app
COPY oa-backend/pom.xml .
RUN mvn dependency:go-offline -B
COPY oa-backend/src ./src
RUN mvn clean package -DskipTests

FROM tomcat:9-jdk8
RUN rm -rf /usr/local/tomcat/webapps/*
COPY --from=builder /app/target/oa-backend.war /usr/local/tomcat/webapps/ROOT.war
EXPOSE 8080
CMD ["catalina.sh", "run"]
